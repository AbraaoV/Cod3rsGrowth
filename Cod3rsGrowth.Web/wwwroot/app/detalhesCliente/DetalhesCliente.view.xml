<mvc:View 
	controllerName="ui5.codersgrowth.app.detalhesCliente.DetalhesCliente"
	displayBlock="true" 
	xmlns="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form">

	<ObjectPageLayout id="ObjectPageLayout"
					showTitleInHeaderContent="true"
					alwaysShowContentHeader="false"
					preserveHeaderStateOnScroll="true"
					headerContentPinnable="true"
					isChildPage="true"
					upperCaseAnchorBar="false">
				<headerTitle>
					<ObjectPageDynamicHeaderTitle>
						<expandedHeading>
							<m:Title text="{i18n>detailPageTitle}" wrapping="true" class="sapUiSmallMarginEnd"/>
						</expandedHeading>

						<navigationActions>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press=".aoClicarEmTelaCheia" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press=".aoClicarEmFecharTelaCheia" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press=".aoFecharDetalhes" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
						</navigationActions>
						<actions>
							<m:Button
									text="{i18n>editBtnText}"
									type="Emphasized"
									press="toggleAreaPriority"/>
							<m:Button
									text="{i18n>deleteBtnText}"
									type="Transparent"/>
						</actions>
					</ObjectPageDynamicHeaderTitle>
				</headerTitle>
		<sections>
			<ObjectPageSection title="General Information">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="Nome"/>
									<m:Text  text="{listaDeClientes>nome}"/>
									<m:Label text="Pessoa"/>
									
									<m:Label text="Cpf"/>
									<m:Label text="{path: 'listaDeClientes>cpf', formatter: '.formatter.formatarCpf'}{path: 'listaDeClientes>cnpj', formatter: '.formatter.formatarCnpj'}"/>
									<m:Label text="Cnpj"/>
									<m:Text text="{listaDeClientes>tipo}"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{i18n>titleOrdersList}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								id="tabelaPedidos"
								mode="SingleSelectMaster"
								items="{path : ''}">
								<m:columns>
									<m:Column />
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>