<mvc:View 
	controllerName="ui5.codersgrowth.app.detalhesCliente.DetalhesCliente"
	displayBlock="true" 
	xmlns="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form">

	<ObjectPageLayout id="ObjectPageLayout"
					showTitleInHeaderContent="true"
					alwaysShowContentHeader="false"
					preserveHeaderStateOnScroll="true"
					headerContentPinnable="true"
					isChildPage="true"
					upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{i18n>detailPageTitle}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<navigationActions>
					<m:OverflowToolbarButton id= "botaoTelaCheia" type="Transparent" icon="sap-icon://full-screen" press=".aoClicarEmTelaCheia"/>
					<m:OverflowToolbarButton id= "botaoSairTelaCheia" type="Transparent" icon="sap-icon://exit-full-screen" press=".aoClicarEmFecharTelaCheia" visible="false"/>
					<m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press=".aoFecharDetalhes"/>
				</navigationActions>
				<actions>
					<m:Button text="{i18n>editBtnText}" type="Emphasized" press="toggleAreaPriority"/>
					<m:Button text="{i18n>deleteBtnText}" type="Transparent"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
				<sections>
		<ObjectPageSection title="{i18n>customerInfoTitle}">
			<subSections>
				<ObjectPageSubSection>
					<blocks>
						<form:SimpleForm
							maxContainerCols="2"
							editable="false"
							layout="ResponsiveGridLayout"
							labelSpanL="12"
							labelSpanM="12"
							emptySpanL="0"
							emptySpanM="0"
							columnsL="1"
							columnsM="1">
							<form:content>
								<m:Label text="Nome" design="Bold"/>
								<m:Text  text="{clienteSelecionado>/nome}"/>
								<m:Label text="Pessoa" design="Bold"/>
								<m:Text text="{clienteSelecionado>/tipo}"/>
								<m:Label design="Bold" id="labelCpf" text="CPF" visible="{= ${clienteSelecionado>/tipo} === 'Fisica'}"/>
								<m:Text id="textoCpf" text="{path: 'clienteSelecionado>/cpf', formatter: '.formatter.formatarCpf'}"
								visible="{= ${clienteSelecionado>/tipo} === 'Fisica'}"/>
								<m:Label design="Bold" id="labelCnpj" text="CNPJ" visible="{= ${clienteSelecionado>/tipo} === 'Juridica'}"/>
								<m:Text id="textoCnpj" text="{path: 'clienteSelecionado>/cnpj', formatter: '.formatter.formatarCnpj'}"
								visible="{= ${clienteSelecionado>/tipo} === 'Juridica'}"/>
								<m:Image src="{}" width="50%" height="50%" />
							</form:content>
						</form:SimpleForm>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
		</ObjectPageSection>
		<ObjectPageSection title="{i18n>titleOrdersList}" titleUppercase="false">
			<subSections>
				<ObjectPageSubSection>
					<blocks>
						<m:Table
							id="tabelaPedidos"
							mode="SingleSelectMaster"
							items="{path : ''}">
							<m:columns>
								<m:Column />
							</m:columns>
							<m:items>
								<m:ColumnListItem>
									<m:cells>
										
									</m:cells>
								</m:ColumnListItem>
							</m:items>
						</m:Table>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
		</ObjectPageSection>
	</sections>
	</ObjectPageLayout>
</mvc:View>