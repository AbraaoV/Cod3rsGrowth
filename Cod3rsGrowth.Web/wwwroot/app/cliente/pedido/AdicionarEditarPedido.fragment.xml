<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">

    <Dialog
        id="addOrderDialog"
        title="Adicionar Pedido"
        class="sapUiResponsivePadding"
        draggable="true"
        resizable="true">
        
        <content>
            <form:SimpleForm
                id="addOrderForm"
                class="sapUiResponsivePadding"
                layout="ResponsiveGridLayout"
                labelSpanL="3"
                labelSpanM="3"
                adjustLabelSpan="true"
                columnsL="2"
                columnsM="1">
                
                <form:content>
                    <Label text="Data"
                    />
                    <DatePicker
                        class="sapUiSmallMarginBeginEnd"
                        id="dataDoPedido"
                        valueFormat="yyyy-MM-ddTHH:mm:ss.000"
                        width="90%"
                        placeholder="Selecione a data"/>
                    
                    <Label text="Forma de Pagamento"/>
                    <ComboBox
                        class="sapUiSmallMarginBeginEnd"
                        id="formaDePagamento"
                        selectedKey="todos"
                        width="90%"
                        items="{path: 'formasDePagamento>/'}"
                        change=".aoSelecionarFormaDePagamento">
                        <items>
                            <core:ListItem key="{formasDePagamento>key}" text="{formasDePagamento>descricao}"/>
                        </items>
                    </ComboBox>
                    <Label text="Número do Cartão"/>
                    <Input
                        class="sapUiSmallMarginBeginEnd"
                        id="numeroDoCartao"
                        width="90%"
                        placeholder="Número do Cartão"
                        type="Number"/>
                    <Label text="Valor"/>
                    <Input
                        class="sapUiSmallMarginBeginEnd"
                        id="valorDoPedido"
                        liveChange=".aoDigitarValor"
                        width="90%"
                        placeholder="Valor"/>
                </form:content>
            </form:SimpleForm>
        </content>
        
        <buttons>
            <Button
                text="Adicionar"
                press="aoClicarEmAdicionarPedido"/>
            <Button
                text="Cancelar"
                press="onCancel"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
