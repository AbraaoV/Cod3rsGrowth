<mvc:View 
	controllerName="ui5.codersgrowth.app.cliente.DetalhesCliente"
	displayBlock="true" 
	xmlns="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:item="sap.ui.core.Item"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<ObjectPageLayout id="ObjectPageLayout"
					showTitleInHeaderContent="true"
					alwaysShowContentHeader="false"
					preserveHeaderStateOnScroll="true"
					headerContentPinnable="true"
					isChildPage="true"
					upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{i18n>detailPageTitle}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>

				<navigationActions>
					<m:OverflowToolbarButton id= "botaoTelaCheia" type="Transparent" icon="sap-icon://full-screen" press=".aoClicarEmTelaCheia"/>
					<m:OverflowToolbarButton id= "botaoSairTelaCheia" type="Transparent" icon="sap-icon://exit-full-screen" press=".aoClicarEmFecharTelaCheia" visible="false"/>
					<m:OverflowToolbarButton id= "botaoFecharDetalhes" type="Transparent" icon="sap-icon://decline" press=".aoFecharDetalhes"/>
				</navigationActions>
				<actions>
					<m:Button text="{i18n>editBtnText}" type="Emphasized" press=".aoClicarEmEditar"/>
					<m:Button text="{i18n>deleteBtnText}" type="Transparent"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
				<sections>
		<ObjectPageSection title="{i18n>customerInfoTitle}">
			<subSections>
				<ObjectPageSubSection>
					<blocks>
						<form:SimpleForm
							maxContainerCols="2"
							editable="false"
							layout="ResponsiveGridLayout"
							labelSpanL="12"
							labelSpanM="12"
							emptySpanL="0"
							emptySpanM="0"
							columnsL="2"
							columnsM="2">
							<form:content>
								<core:Title text="{i18n>customerInfoTitle}"/>
								<m:Label text="Nome" design="Bold"/>
								<m:Text  text="{clienteSelecionado>/nome}" />
								<m:Label text="Pessoa" design="Bold"/>
								<m:Text text="{clienteSelecionado>/tipo}"/>
								<m:Label design="Bold" text="{= ${clienteSelecionado>/tipo} === 'Pessoa Física' ? 'CPF' : 'CNPJ'}"/>
								<m:Text text="{= ${clienteSelecionado>/tipo} === 'Pessoa Física' ? ${path: 'clienteSelecionado>/cpf', formatter: '.formatter.formatarCpf'} : ${path: 'clienteSelecionado>/cnpj', formatter: '.formatter.formatarCnpj'}}"/>
								<core:Title text="{i18n>iconTitle}" class="sapUiResponsiveMargin"/>
								<m:Image src="{= ${clienteSelecionado>/tipo} === 'Pessoa Física' ? 'images/iconePadraoFisica.png' : 'images/iconePadraoJuridica.png'}" width="25%" height="25%" class="centered-image"/>
							</form:content>
						</form:SimpleForm>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
		</ObjectPageSection>
		<ObjectPageSection title="{i18n>titleOrdersList}" titleUppercase="false">
			<subSections>
				<ObjectPageSubSection>
					<blocks>
						<m:Table
							id="tabelaPedidos"
							items="{path : 'listaDePedidos>/'}"
							class="sapUiResponsiveMargin"
							width="auto">
							<m:headerToolbar>
								<m:Toolbar>
									<m:Title text="Filtros"/>
									<m:ToolbarSpacer/>
									<m:ComboBox
									id="comboBoxFormaDePagamento"
									selectedKey="todos"
									placeholder="Forma de pagamento"
									items="{path: 'formasDePagamento>/'}"
									width="22%"
									change=".aoSelecionarFormaDePagamento">
									<m:items>
										<core:ListItem key="{formasDePagamento>key}" text="{formasDePagamento>descricao}"/>
									</m:items>
								</m:ComboBox>
								<m:DatePicker
									id="filtroDataPicker"
									placeholder="Data do pedido"
									width="16%"
									valueFormat="yyyy-MM-dd"
									change=".aoFiltrarPelaData"/>
								<m:Input
										id="inputValorMin"
										width="11%"
										liveChange=".aoDigitarValorMin"
										placeholder="Valor míninimo"/>
								<m:Input
									id="inputValorMax"
									width="11%"
									liveChange=".aoDigitarValorMax"
									placeholder="Valor máximo"/>
								<m:Button
									id="botaoAdicionar"
									text="Adicionar"
									press=".aoClicarEmAdicionar"
									type="Emphasized"/>
								</m:Toolbar>
							</m:headerToolbar>
							<m:columns>
								<m:Column>
									<m:Text text="{i18n>orderDate}"/>
								</m:Column>
								<m:Column
									hAlign="Begin">
									<m:Text text="{i18n>orderPaymentMethod}"/>
								</m:Column>
								<m:Column
									hAlign="Begin">
									<m:Text text="{i18n>orderCard}"/>
								</m:Column>
								<m:Column
									hAlign="End">
									<m:Text text="{i18n>orderValue}"/>
								</m:Column>
							</m:columns>
							<m:items>
								<m:ColumnListItem>
									<m:cells>
										<m:ObjectIdentifier
											title="{path: 'listaDePedidos>data', formatter: '.formatter.formatarData'}"/>
										<m:ObjectIdentifier
											title="{listaDePedidos>formaPagamento}"/>
										<m:ObjectIdentifier
											title="{path: 'listaDePedidos>numeroCartao', formatter: '.formatter.formatarCartao'}"/>
										<m:ObjectNumber
											number="{
													parts: [
														'listaDePedidos>valor',
														'modeloMoeda>/currency'
													],
													type: 'sap.ui.model.type.Currency',
													formatOptions: {
														showMeasure: false
													}
												}"
											unit="{modeloMoeda>/currency}"
											state="{= ${listaDePedidos>valor} > 50 ? 'Success' : 'Error' }"/>	
									</m:cells>
								</m:ColumnListItem>
							</m:items>
						</m:Table>
					</blocks>
				</ObjectPageSubSection>
			</subSections>
		</ObjectPageSection>
	</sections>
	</ObjectPageLayout>
</mvc:View>