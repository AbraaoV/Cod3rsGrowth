<mvc:View xmlns:f="sap.f"
   controllerName="ui5.codersgrowth.app.lista.Lista"
   xmlns:core="sap.ui.core"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Page title="{i18n>appTitle}" class="sapUiResponsiveContentPadding">    
      <List id ="listaCliente" items="{path: '/'}" growing="true" growingThreshold="10">
         <headerToolbar>
            <Toolbar>
               <Title text="{i18n>listTitle}"/>
               <ToolbarSpacer/>
               <SearchField
                  id="filtroPesquisa"
                  width="30%"
                  placeholder="{i18n>placeHolderFilter}"
                  liveChange=".aoFiltrarNome"/>
               <Button
                  id="botaoFiltro"
                  icon="sap-icon://filter"
                  press=".aoApertarFiltro"
                  type="Transparent"/>
            </Toolbar>
         </headerToolbar>
         <CustomListItem>
            <HBox>
               <core:Icon size="2rem" src="sap-icon://customer" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
               <VBox width="100%" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
                  <Title text="{nome}"/>
                  <Label text="{path: 'cpf', formatter: '.formatter.formatarCpf'}{path: 'cnpj', formatter: '.formatter.formatarCnpj'}"/>
               </VBox>
               <FlexBox
                  class= "sapUiSmallMarginEnd"
                  height="60px"
                  alignItems="Center"
                  justifyContent="End">
                  <Title text="Pessoa {tipo}"/>
               </FlexBox>
            </HBox>
         </CustomListItem>
      </List>
   </Page>
</mvc:View>
